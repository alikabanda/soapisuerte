<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th colspan="3">Actions</th>
        </tr>

      <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.category_id %></td>
            <td><%= recref.categoryname %></td>
            <td><a href='/category/<%= recref.category_id %>/show'> Details</a></td>
            <td><a href='/category/<%= recref.category_id %>/edit'>Edit</a></td>
            <td><a href='/category/<%= recref.category_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
        </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>

<p> <a href='/category/addrecord'>Add New</a> </p>
