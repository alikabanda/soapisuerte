<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Style</th>
            <th colspan="3">Actions</th>
        </tr>
      <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.package_id %></td>
            <td><%= recref.packagename %></td>
            <td><%= recref.qtyincluded %></td>
            <td><%= recref.packagestyle %></td>
            <td><a href='/package/<%= recref.package_id %>/show'> Details</a></td>
            <td><a href='/package/<%= recref.package_id %>/edit'>Edit</a></td>
            <td><a href='/package/<%= recref.package_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
        </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>

<p> <a href='/package/addrecord'>Add New</a> </p>
