<h1>Edit</h1>
<form action="/review/save" method="post">
   <input type="hidden" name="review_id" value="<%= onerec.review_id %>" >
<table>
	<tr> <td> Customer ID: </td> <td> <input type="number" name="customer_id" value="<%= onerec.customer_id %>" required> </td> </tr>
	<tr> <td> Product ID: </td> <td> <input type="number" name="product_id" value="<%= onerec.product_id %>" required> </td> </tr>
	<tr> <td> Review Date: </td> <td> <input type="date" name="reviewdate" value="<%= onerec.reviewdate %>" required> </td> </tr>
	<tr> <td> Comments: </td> <td> <input type="text" name="comments" value="<%= onerec.comments %>" required> </td> </tr>
	<tr> <td> Rating: </td> <td> <input type="number" name="rating" value="<%= onerec.rating %>" required> </td> </tr>
	<tr> <td> Status: </td> <td> <select  name="status"  required>
		<option selected><%= onerec.status %></option>
		<option>Publish</option>
		<option>Internal</option>
		<option>Review</option>
	   </select> </td> </tr>
</table>
<button type="submit">Save</button>
</form>

